<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/fragment_me_ll"
    android:fitsSystemWindows="true"
    android:background="@drawable/imgs_bj"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.fengxun.funsun.view.views.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="40px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fragment_me_iv_head"
                    android:layout_width="140px"
                    android:layout_height="140px"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="45px"
                    android:layout_marginTop="100px"
                    android:src="@drawable/pinglun_message" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/fragment_me_iv_head"
                    android:layout_marginLeft="20px"
                    android:layout_toRightOf="@id/fragment_me_iv_head"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/fragment_me_tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:text="王聪"
                            android:textColor="@color/colorbWhite"
                            android:textSize="13pt" />

                        <ImageView
                            android:id="@+id/fragment_me_iv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30px"
                            android:layout_toRightOf="@+id/fragment_me_tv_name"
                            android:src="@drawable/male_h" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/fragment_me_tv_schllo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5px"
                        android:background="@drawable/text_bored"
                        android:paddingBottom="5px"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:paddingTop="5px"
                        android:text="清华大学"
                        android:textColor="@color/colorbWhite"
                        android:textSize="25px" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/fragment_me_iv_stting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30px"
                    android:padding="10px"
                    android:src="@drawable/stting_icon" />

                <RelativeLayout
                    android:layout_marginTop="30px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_me_iv_head">

                    <View
                        android:id="@+id/fragment_me_view_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorbWhite" />

                    <LinearLayout
                        android:layout_marginBottom="20px"
                        android:layout_below="@+id/fragment_me_view_line"
                        android:id="@+id/fragment_me_ll_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/fragment_me_ll_quotations"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/yulu" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10px"
                                android:text="语录"
                                android:textColor="@color/colorbWhite"
                                android:textSize="30px" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fragment_me_ll_collect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/shoucang" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10px"
                                android:text="收藏"
                                android:textColor="@color/colorbWhite"
                                android:textSize="30px" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fragment_me_ll_face"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/kanlian" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10px"
                                android:text="看脸"
                                android:textColor="@color/colorbWhite"
                                android:textSize="30px" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


            </com.zhy.autolayout.AutoRelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_border"
                android:orientation="vertical"
              >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_me_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>



        </com.zhy.autolayout.AutoLinearLayout>

    </com.fengxun.funsun.view.views.MyScrollView>

</LinearLayout>