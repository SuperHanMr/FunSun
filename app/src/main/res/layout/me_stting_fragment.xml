<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBooblar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/status_bar_fix"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorBooblar"
        />
    <include layout="@layout/tooblar_item"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:paddingRight="5px"
        android:paddingTop="30px"
        android:orientation="vertical"
        android:paddingLeft="40px"
        android:background="@drawable/shape_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/colorbText"
                android:textSize="@dimen/stting_text"
                android:text="学校"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <de.hdodenhof.circleimageview.CircleImageView
               android:layout_centerVertical="true"
                android:id="@+id/ac_stting_iv_school"
                android:layout_marginRight="140px"
                android:src="@drawable/paizhao_icon"
                android:layout_alignParentRight="true"
                android:layout_width="55px"
                android:layout_height="55px" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/ac_stting_tv_school"
                android:text="河南大学"
                android:layout_marginRight="20px"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <include layout="@layout/lin_fengexian"/>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginTop="30px"
            android:id="@+id/ac_stting_rl_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/colorbText"
                android:textSize="@dimen/stting_text"
                android:text="头像"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ac_stting_iv_head"
                android:layout_marginRight="50px"
                android:layout_centerVertical="true"
                android:src="@drawable/paizhao_icon"
                android:layout_alignParentRight="true"
                android:layout_width="55px"
                android:layout_height="55px" />

            <ImageView
                android:layout_centerVertical="true"
                android:src="@drawable/my_right_icons"
                android:layout_marginRight="20px"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <include layout="@layout/lin_fengexian"/>


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ac_stting_rl_name"
            android:paddingTop="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorbText"
                android:textSize="@dimen/stting_text"
                android:text="昵称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <com.zhy.autolayout.AutoRelativeLayout

                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="15px"
                    android:id="@+id/ac_stting_tv_name"
                    android:textSize="25px"
                    android:textColor="@color/colorbText"
                    android:text="瀚哥哥"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_right_icons"
                    android:layout_marginRight="20px"
                    android:layout_toRightOf="@+id/ac_stting_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoRelativeLayout>


        <include layout="@layout/lin_fengexian"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ac_stting_rl_xingbie"
            android:paddingTop="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorbText"
                android:textSize="@dimen/stting_text"
                android:text="性别"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ac_stting_tv_xingbie"
                    android:textSize="25px"
                    android:textColor="@color/colorbText"
                    android:text="男"
                    android:layout_marginRight="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_right_icons"
                    android:layout_marginRight="20px"
                    android:layout_toRightOf="@+id/ac_stting_tv_xingbie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoRelativeLayout>

        <include layout="@layout/lin_fengexian"/>


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ac_stting_rl_num"
            android:paddingTop="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView

                android:textColor="@color/colorbText"
                android:textSize="@dimen/stting_text"
                android:text="FunSun号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <com.zhy.autolayout.AutoRelativeLayout

                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="15px"
                    android:id="@+id/ac_stting_tv_funsun"
                    android:textSize="25px"
                    android:textColor="@color/colorbText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ac_stting_iv_funsun_back"
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_right_icons"
                    android:layout_marginRight="20px"
                    android:layout_toRightOf="@+id/ac_stting_tv_funsun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <include layout="@layout/lin_fengexian"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ac_stting_rl_password"
            android:paddingTop="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorbText"
                android:textSize="@dimen/stting_text"
                android:text="修改密码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_marginRight="20px"

                android:layout_alignParentRight="true"
                android:src="@drawable/my_right_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <include layout="@layout/lin_fengexian"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ac_stting_rl_heimingdan"
            android:paddingTop="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorbText"
                android:textSize="@dimen/stting_text"
                android:text="黑名单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_marginRight="20px"
                android:layout_alignParentRight="true"
                android:src="@drawable/my_right_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <include layout="@layout/lin_fengexian"/>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:textColor="@color/colorbText"
                android:id="@+id/ac_stting_btn"
                android:text="退出登录"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:background="@drawable/shape_login_btn_border"
                android:layout_width="match_parent"
                android:layout_height="90px" />

        </com.zhy.autolayout.AutoRelativeLayout>



    </com.zhy.autolayout.AutoLinearLayout>




</LinearLayout>