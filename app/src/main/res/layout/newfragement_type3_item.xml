<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    android:elevation="@dimen/new_item"
    android:background="@drawable/shape_newitem_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/new_type3_itemview"
           android:padding="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_border">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/new_item_type3_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingRight="10px">

                    <TextView
                        android:id="@+id/new_item_type3_tv_biaoti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8px"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="我是标题我是标题我是"
                        android:textColor="@color/colorbText"
                        android:textSize="33px" />

                    <com.zhy.autolayout.AutoLinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4px"
                        android:layout_marginTop="10px"
                        android:orientation="horizontal">

                        <TextView
                            android:singleLine="true"
                            android:lines="1"
                            android:maxWidth="250px"
                            android:id="@+id/new_item_type3_tv_tiezi_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我是发帖作者"
                            android:textColor="@color/colorbTextGary"
                            android:textSize="25px" />

                        <TextView
                            android:id="@+id/new_item_type3_tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15px"
                            android:text="我是发帖时间"
                            android:textColor="@color/colorbTextGary"
                            android:textSize="25px" />
                    </com.zhy.autolayout.AutoLinearLayout>


                </com.zhy.autolayout.AutoLinearLayout>


                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/new_item_type3_imagview"
                    android:layout_width="220px"
                    android:layout_height="160px"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgs"
                    app:riv_corner_radius_bottom_left="15px"
                    app:riv_corner_radius_bottom_right="15px"
                    app:riv_corner_radius_top_left="15px"
                    app:riv_corner_radius_top_right="15px"
                    app:riv_mutate_background="true" />
            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5px"
                android:layout_below="@+id/new_item_type3_top">

                <include layout="@layout/roots_layout2" />
                <include layout="@layout/roots_layout" />

            </com.zhy.autolayout.AutoRelativeLayout>


        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/comment_user_info" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>


    <ImageView
        android:visibility="gone"
        android:id="@+id/new_item_type3_iv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="140px"
        android:padding="50px"
        android:src="@drawable/pinglun" />

</com.zhy.autolayout.AutoFrameLayout>