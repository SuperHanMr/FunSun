<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBooblar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tooblar_item"/>

    <LinearLayout
        android:background="@drawable/shape_border"
        android:orientation="vertical"
        android:paddingRight="60px"
        android:paddingLeft="60px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/colorbBlack"
            android:textSize="45px"
            android:layout_marginTop="60px"
            android:text="登录FunSun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/ac_login_phone"
            android:padding="20px"
            android:layout_marginTop="60px"
            android:hint="手机号/FunSun号"
            android:textSize="35px"
            android:background="@drawable/shape_login_borde"
            android:layout_width="match_parent"
            android:layout_height="110px" />


        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/shape_login_borde"
            android:layout_marginTop="40px"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <EditText
                android:textSize="35px"
                android:id="@+id/ac_login_password"
                android:padding="20px"
                android:hint="密码"
                android:background="@color/colorbTransparence"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="35px"
                android:id="@+id/ac_login_forgetpassword"
                android:layout_marginRight="15px"
                android:text="忘记密码?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/ac_login_btn"
                android:text="登录"
                android:background="@drawable/shape_login_btn_border"
                android:layout_marginBottom="80px"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>