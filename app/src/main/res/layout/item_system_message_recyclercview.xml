<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="35px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="45px"
        android:layout_width="100px"
        android:src="@drawable/pinglun_message"
        android:id="@+id/item_system_message_head"
        android:layout_height="100px" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="15px"
        android:layout_marginTop="13px"
        android:layout_toRightOf="@id/item_system_message_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_marginTop="5px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_system_message_name"
                android:textColor="@color/colorbText"
                android:text="系统提示"
                android:textSize="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- TODO： 提示小红点 -->
            <ImageView
                android:id="@+id/item_system_message_tishi"
                android:layout_toRightOf="@id/item_message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_system_message"
            android:text="怎么不理我！"
            android:textColor="@color/colorbMessageText"
            android:textSize="25px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_system_message_time"
        android:textColor="@color/colorbMessageText"
        android:layout_centerVertical="true"
        android:textSize="20px"
        android:layout_marginRight="20px"
        android:layout_alignParentRight="true"
        android:text="1分钟前"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_below="@+id/item_system_message_head"
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/commom_background"/>
</com.zhy.autolayout.AutoRelativeLayout>