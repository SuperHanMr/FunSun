<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBooblar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/tooblar_item"/>



    <LinearLayout
        android:orientation="vertical"
        android:paddingRight="40px"
        android:paddingLeft="40px"
        android:layout_marginTop="115px"
        android:background="@drawable/shape_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <EditText
            android:singleLine="true"
            android:id="@+id/ac_registration_name"
            android:padding="20px"
            android:layout_marginTop="180px"
            android:hint="填写昵称(可以含有emoj)"
            android:textSize="35px"
            android:background="@drawable/shape_login_borde"
            android:layout_width="match_parent"
            android:layout_height="110px" />


        <RadioGroup
            android:id="@+id/ac_registration_rb"
            android:orientation="horizontal"
            android:layout_marginTop="40px"
            android:layout_width="match_parent"
            android:layout_height="110px">

        <RadioButton

            android:text="男"
            android:layout_marginRight="40px"
            android:background="@drawable/selector_btn_gender"
            android:id="@+id/ac_registration_rb1"
            style="@style/gender_rb_style"
            android:drawableRight="@drawable/gender_male_selector"
            />

            <RadioButton
                android:drawableRight="@drawable/gender_female_selector"
                android:text="女"
                android:background="@drawable/selector_btn_gender"
                android:id="@+id/ac_registration_rb2"
                style="@style/gender_rb_style"
                />
        </RadioGroup>

        <TextView
            android:gravity="center_vertical"
            android:text="学校"
            android:paddingRight="40px"
            android:drawableRight="@drawable/location_icon"
            android:id="@+id/ac_registration_location"
            android:paddingLeft="20px"
            android:layout_marginTop="40px"
            android:textSize="35px"
            android:background="@drawable/shape_login_borde"
            android:layout_width="match_parent"
            android:layout_height="110px" />

        <TextView
            android:id="@+id/ac_registration_time"
            android:gravity="center_vertical"
            android:padding="20px"
            android:layout_marginTop="40px"
            android:hint="入学时间"
            android:textSize="35px"
            android:background="@drawable/shape_login_borde"
            android:layout_width="match_parent"
            android:layout_height="110px" />





        <LinearLayout

            android:paddingLeft="80px"
            android:orientation="horizontal"
            android:layout_marginTop="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/ac_registration_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="我已阅读并同意"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ac_registration_protocol"
                android:text="“用户协议和隐私条款”"
                android:textColor="@color/colorBooblar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:enabled="false"
                android:id="@+id/ac_registration_btn"
                android:textColor="#5000"
                android:text="下一步"
                android:layout_marginBottom="60px"
                android:layout_alignParentBottom="true"
                android:background="@drawable/shape_login_borde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>





    <RelativeLayout
        android:layout_marginTop="30px"
        android:layout_gravity="center_horizontal"
        android:layout_width="200px"
        android:layout_height="200px">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/ac_registration_paizaho"
            android:src="@drawable/shape_pictures_round"
            android:layout_width="200px"
            android:layout_height="200px">
        </ImageView>

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/paizhao_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</FrameLayout>