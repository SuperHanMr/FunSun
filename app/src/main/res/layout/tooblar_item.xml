<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBooblar"
    android:layout_height="wrap_content"
    android:id="@+id/tooblar">

        <TextView
            android:textColor="@color/colorbWhite"
            android:textSize="38px"
            android:id="@+id/tooblar_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tooblar_left_icon"
            android:layout_width="200px"
            android:layout_height="100px">
            <ImageView
                android:id="@+id/tooblar_iv_left_icon"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tooblar_title_tv"
            android:layout_gravity="center"
            android:textColor="@color/colorbWhite"
            android:textSize="45px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/tooblar_right_icon"
            android:layout_marginRight="20px"
            android:layout_gravity="right"
            android:src="@mipmap/dingwei_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="38px"
            android:textColor="@color/colorbWhite"
            android:id="@+id/tooblar_right_text"
            android:layout_marginRight="15px"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

   </android.support.v7.widget.Toolbar>

