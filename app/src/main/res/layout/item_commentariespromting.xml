<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="40px"
    android:id="@+id/commentariespromting_rl_item"
    android:background="@color/colorbWhite"
    android:paddingLeft="40px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commentariespromting_item_head"
        android:src="@drawable/pinglun_message"
        android:layout_width="100px"
        android:layout_height="100px" />

    <LinearLayout
        android:paddingLeft="20px"
        android:orientation="vertical"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@+id/commentariespromting_item_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/commentariespromting_tv_school"
                android:textColor="@color/colorbBlack"
                android:textSize="35px"
                android:text="清华大学"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/commentariespromting_tv_time"
                android:textColor="@color/colorbTextGary"
                android:textSize="30px"
                android:layout_marginRight="20px"
                android:layout_alignParentRight="true"
                android:text="昨天15：36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="5px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:visibility="gone"
                android:layout_marginLeft="4px"
                android:textSize="23px"
                android:textColor="@color/colorbWhite"
                android:id="@+id/commentariespromting_tv_type"
                android:paddingLeft="12px"
                android:paddingRight="12px"
                android:paddingTop="3px"
                android:paddingBottom="3px"
                android:text="校友"
                android:background="@drawable/text_zise_bored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:id="@+id/commentariespromting_tv_name"
                android:textColor="@color/colorbTextGary"
                android:layout_alignBottom="@+id/commentariespromting_tv_type"
                android:text="瀚哥哥"
                android:layout_marginLeft="3px"
                android:layout_toRightOf="@+id/commentariespromting_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="3px"
            android:layout_marginTop="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/commentariespromting_mge_ivon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:singleLine="true"
                android:lines="1"
                android:id="@+id/commentariespromting_tv_massage"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/commentariespromting_mge_ivon"
                android:textColor="@color/colorbMessageText"
                android:text="我是瀚哥哥瀚哥哥哥哥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <View
            android:layout_marginTop="15px"
            android:background="@color/commom_background"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>



</com.zhy.autolayout.AutoRelativeLayout>