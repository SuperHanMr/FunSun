<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:background="@color/colorBooblar"
    android:layout_height="wrap_content"
    android:id="@+id/tooblar">

        <TextView
            android:textColor="@color/colorbWhite"
            android:textSize="40px"
            android:id="@+id/tooblar_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tooblar_left_icon"
            android:layout_width="200px"
            android:layout_height="100px">
            <ImageView
                android:id="@+id/tooblar_iv_left_icon"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <TextView
            android:singleLine="true"
            android:lines="1"
            android:maxWidth="500px"
            android:id="@+id/tooblar_title_tv"
            android:layout_gravity="center"
            android:textColor="@color/colorbWhite"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView

            android:visibility="gone"
            android:src="@drawable/dianzan"
            android:id="@+id/tooblar_ittle_center"
            android:layout_gravity="center"
            android:layout_width="50px"
            android:layout_height="50px"

            />


        <ImageView
            android:visibility="gone"
            android:id="@+id/tooblar_right_icon"
            android:layout_marginRight="20px"
            android:layout_gravity="right"
            android:src="@mipmap/dingwei_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="40px"
            android:textColor="@color/colorbWhite"
            android:id="@+id/tooblar_right_text"
            android:layout_marginRight="30px"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    <CheckBox
        android:visibility="gone"
        android:layout_gravity="right"
        android:id="@+id/tanslation_chekbox"
        android:background="@drawable/translation_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        />

   </android.support.v7.widget.Toolbar>

</com.zhy.autolayout.AutoRelativeLayout>