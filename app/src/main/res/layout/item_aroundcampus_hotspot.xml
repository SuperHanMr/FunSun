<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_aroundcampus_iv_rl"
    android:layout_marginTop="20px"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:id="@+id/paiming_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="visible"
            android:layout_marginTop="9px"
            android:id="@+id/item_aroundcampus_iv_paiming"
            android:src="@drawable/diyi"
            android:layout_width="60px"
            android:layout_height="60px"
            />

        <TextView
            android:visibility="gone"
            android:textSize="33px"
            android:id="@+id/item_aroundcampus_tv_paiming"
            android:layout_marginTop="9px"
            android:textColor="@color/colorBooblar"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="4"
            android:layout_width="60px"
            android:layout_height="60px" />

    </RelativeLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_toRightOf="@+id/paiming_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_aroundcampus_hot_head"
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@drawable/pinglun_message"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginLeft="15px"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_aroundcampus_hot_tvName"
                    android:textColor="@color/colorbText"
                    android:textSize="30px"
                    android:text="河南大学"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_aroundcampus_hot_content"
                    android:textColor="@color/colorbMessageText"
                    android:layout_marginTop="10px"
                    android:textSize="23px"
                    android:text="最近更新了22条内容"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.zhy.autolayout.AutoLinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="20px"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/redu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/item_aroundcampus_hot_redu"
                        android:textColor="@color/colorbTextGary"
                        android:textSize="23px"
                        android:layout_marginTop="8px"
                        android:text="热度20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />


                </com.zhy.autolayout.AutoLinearLayout>


            </com.zhy.autolayout.AutoRelativeLayout>


        </com.zhy.autolayout.AutoLinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item_pinglun_message_head"
            android:layout_marginTop="20px"
            android:background="@color/commom_background" />



    </com.zhy.autolayout.AutoLinearLayout>





</com.zhy.autolayout.AutoRelativeLayout>

