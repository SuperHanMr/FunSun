<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正三角 -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="-5%"
            android:pivotY="145%">
            <shape android:shape="rectangle">
                <size
                    android:width="8dp"
                    android:height="8dp" />
                <solid android:color="#f2f2f2" />
            </shape>
        </rotate>
    </item>
</layer-list>