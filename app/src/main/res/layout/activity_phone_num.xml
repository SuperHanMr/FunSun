<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBooblar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/tooblar_item"/>

    <LinearLayout
        android:background="@drawable/shape_border"
        android:orientation="vertical"
        android:paddingRight="60px"
        android:paddingLeft="60px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="160px"
            android:orientation="horizontal"
            android:background="@drawable/shape_login_borde"
            android:layout_width="match_parent"
            android:layout_height="110px">

            <TextView
                android:textColor="@color/colorbBlack"
                android:layout_marginLeft="20px"
                android:layout_gravity="center_vertical"
                android:textSize="35px"
                android:text="+86"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ac_phone_ed_phone"
                android:padding="20px"
                android:layout_weight="1"
                android:textSize="35px"
                android:hint="手机号"
                android:background="@color/colorbTransparence"
                android:layout_width="100px"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/ac_phone_btn_validation_code"
                android:background="@drawable/shape_forget_code_border"
                android:text="验证"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20px"
                android:layout_width="120px"
                android:layout_height="80px" />
        </LinearLayout>

        <EditText
            android:id="@+id/ac_phone_ed_code"
            android:padding="20px"
            android:layout_marginTop="40px"
            android:hint="验证码"
            android:textSize="35px"
            android:background="@drawable/shape_login_borde"
            android:layout_width="match_parent"
            android:layout_height="110px" />

        <EditText
            android:id="@+id/ac_phone_ed_password"
            android:padding="20px"
            android:layout_marginTop="40px"
            android:hint="设置密码"
            android:textSize="35px"
            android:background="@drawable/shape_login_borde"
            android:layout_width="match_parent"
            android:layout_height="110px" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/ac_phone_btn"
                android:text="完成"
                android:background="@drawable/shape_login_btn_border"
                android:layout_marginBottom="80px"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>