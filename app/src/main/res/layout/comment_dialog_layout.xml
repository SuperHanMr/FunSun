<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="30px"
    android:paddingTop="15px"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/comment_rl_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/comment_dialog_back"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="@color/colorbMessageText"
            android:layout_marginLeft="20px"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/comment_dialog_back"
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoRelativeLayout>


    <EditText
        android:layout_marginBottom="30px"
        android:singleLine="true"
        android:imeOptions="actionSend"
        android:textColor="@color/colorbText"
        android:id="@+id/dialog_comment_content"
        android:padding="20px"
        android:gravity="top"
        android:hint="请输入评论"
        android:layout_marginTop="15px"
        android:background="@drawable/shape_comment_dialog_bg"
        android:layout_width="match_parent"
        android:layout_height="280px"
        />



</com.zhy.autolayout.AutoLinearLayout>