<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 第一层  上部和左部偏移一定距离-->

    <item
        android:left="3dp"
        android:top="3dp">

        <shape>
            <solid android:color="#f5f5f5" />
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#f5f5f5" />
            <corners android:topLeftRadius="15px"
                android:topRightRadius="15px"
                android:bottomLeftRadius="15px"
                android:bottomRightRadius="15px"
                />
        </shape>
    </item>

    <!-- 第二层 下部和有部偏移一定距离-->
    <item
        android:bottom="2.66dp"
        android:right="2.66dp">
        <shape>
            <solid android:color="@color/colorNewItemBg" />
            <!-- 描边 -->
            <stroke android:width="0.33dp" android:color="#dedede" />


            <corners android:topLeftRadius="15px"
                android:topRightRadius="15px"
                android:bottomLeftRadius="15px"
                android:bottomRightRadius="15px"
                />
        </shape>



    </item>



</layer-list>