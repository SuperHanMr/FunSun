<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="15px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_user_head"
            android:layout_width="70px"
            android:src="@drawable/pinglun_message"
            android:layout_centerVertical="true"
            android:layout_height="70px" />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@+id/comment_user_head"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zhy.autolayout.AutoLinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="23px"
                    android:id="@+id/comment_tv_zuire"
                    android:paddingBottom="5px"
                    android:paddingTop="5px"
                    android:paddingRight="12px"
                    android:paddingLeft="12px"
                    android:background="@drawable/shape_text_border_zise"
                    android:textColor="@color/colorBooblar"
                    android:text="最热"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:singleLine="true"
                    android:lines="1"
                    android:maxWidth="400px"
                    android:textSize="23px"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorbTextGary"
                    android:text="t我是标签text我是标签text"
                    android:layout_marginLeft="10px"
                    android:id="@+id/comment_tv_biaoqian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>



            <TextView
                android:id="@+id/comment_tv_content"
                android:layout_marginLeft="5px"
                android:textSize="23px"
                android:layout_marginTop="10px"
                android:textColor="@color/colorbMessageText"
                android:text="热门评论 热门评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoFrameLayout>